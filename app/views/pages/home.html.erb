<% banner_url = image_url("banerprop1.jpg") %>
<div class="banner mb-5" style="background-image: url(<%= banner_url %>), linear-gradient(to bottom, rgba(0,0,0,0.4),rgba(255,255,255,0.4)); background-position: bottom -100px right 0px">
  <div class="container">
    <h3>Boost attendence for your free events</h3>
    <p class="bannertext">By using stake, Showup incentivizes a higher attendance rate to your free events</p>

    <% if !current_user %>
    <div class="button-start-home">
      <%= link_to 'Start now', new_user_registration_path, class: 'btn btn-primary' %>
      </div>
    <% elsif current_user.attendee? %>
      <div class="search-form-home">
        <%= render './events/search_bar' %>
      </div>
    <% elsif current_user.organizer? %>
      <div class="button-create-home">
        <%= link_to "Create a new event", new_event_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

  <div class="container">
      <h2> This is how show-up works</h2>
        <div class="home-cards col-sm">
          <%= image_tag 'pain.png' %>
            <p>this image will be replace by Guillaume</p>
            <p>We will also provide information here in writing</p>
        </div>
<div class="container">
  <div class="row">
    <% Event.all.sample(3).each do |event| %>
      <div class="home-cards col-sm-4">
        <%= render "events/event_card", event: event %>
      </div>
    <% end %>
  </div>
</div>

