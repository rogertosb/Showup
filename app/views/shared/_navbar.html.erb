<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://i.imgur.com/n9C2xqc.png" %>
 <% end %>
  <div class="btn_nav">
    <% if !current_user %>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to new_user_registration_path, class: "login_hover" do %>
        <i class="fas fa-user-plus"></i>
        <span> SIGNUP </span>
      <% end %></li>

      <li><%= link_to new_user_session_path, class: "login_hover" do %>
        <i class="fas fa-sign-in-alt"></i>
        <span> LOGIN </span>
      <% end %></li>
    </ul>
    <% end %>
  </div>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown" class= "avatar dropdown-toggle" id= "navbarDropdown" data-toggle= "dropdown" aria-haspopup="true", aria-expanded="false" style="background-image: url('<%= cl_image_path current_user.avatar.key %>')">
          <!-- <span class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup=></span> -->
          <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <%#= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/1/18/Photo_pro_C%C3%A9dric_Villani.jpg/260px-Photo_pro_C%C3%A9dric_Villani.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Profil", user_path(current_user), class: "dropdown-item" %>
            <%#= link_to "All events", events_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<script>
  document.querySelectorAll(".dropdown-item").forEach((div) => {
    div.addEventListener("click", (e) => {
      console.log(e.target)
      window.location = e.target.href
    })

  })
</script>
