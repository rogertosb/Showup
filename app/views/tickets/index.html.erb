<div class="top-line">
  <div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @event.photo.key %>');">
    <div class="event-show ml-5">
      <h1><%= @event.title %></h1>
    </div>
  </div>

  <div class="container">
    <h1>Attendees</h1>
    <% @event.tickets.each do |ticket| %>
      <p><%= ticket.user.first_name %> <%= ticket.user.last_name %> ---
      <% if ticket.status.nil? %>
        No status yet
      <% else %>
        <%= ticket.status %>
        <% if ticket.status != 'Show up' %>
          <%= link_to 'Show Up', event_mark_as_showed_path(@event, ticket), method: :patch, class: 'btn btn-primary' %>
        <% elsif ticket.status == 'Show up' %>
          <%= link_to event_mark_as_attendee_path(@event, ticket), method: :patch do %>
            <i class="fas fa-undo-alt"></i>
          <% end %>
        <% end %>
      <% end %>
      </p>
    <% end  %>
  </div>
</div>
